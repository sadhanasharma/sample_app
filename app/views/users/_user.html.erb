<li>
<%=  gravatar_image_tag(user.email.downcase,
:alt => user.name ,
:class => "gravatar",
:gravatar => { :size =>  30}
) %>
<%= link_to  user.name, user %>

<% if current_user.admin? %>|
<%= link_to  :Delete, user, :method => :delete , :confirmation => "You sure ?", :title => "Delete" %>
<% end %>
</li>