<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_users_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followed_by_users_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followed_by_users.count %>
    </strong>
    followers
  </a>
</div>